<aside class="sidebar-menu" style="width: 260px;">
    <div class="menu">

    {% set ns = namespace(section=None) %}

    {# Find the current section object #}
    {% for item in ui_skeleton %}
        {% if item.name == current_section %}
            {% set ns.section = item %}
        {% endif %}
    {% endfor %}

    {% if ns.section %}
        {% for sub in ns.section.sub_elements %}
            <p class="menu-label">{{ sub.title }}</p>

            <ul class="menu-list">
                {% for entry in sub.sub_elements %}
                    <li>
                        <a href="{{ entry.url }}">
                            {{ entry.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endfor %}
    {% else %}
        <p>No menu entries for this section.</p>
    {% endif %}

    </div>
</aside>
