{% extends "main.j2" %}

{% block controlbar %}
  <span style="color: var(--overlord-hover-accent); font-weight: bold;">Trace</span> 
  <span style="margin-left: 8px;"><a href="/inventory">Inventory</a> / <a href="/inventory/group">Group</a> / Details / Function</span>
{% endblock %}

{% block headertitle %}
  <h1 class="title is-4">Edit Function group {{ name }}</h1>
{% endblock %}

{% block content %}

  <div class="box" style="max-width: 600px;">
    <div class="field">
      <label class="label">Group name</label>
      <input id="group_name" class="input" type="text" value="{{ name }}" disabled>
    </div>

    <button class="button is-primary" onclick="saveGroup()">Save</button>
  </div>

  <script>
  async function saveGroup() {
      await apiRequest("PUT", "/api/v1/inventory/group/{{ name }}", {
          [name]: {
            group_type: "function"
          }
      });

      window.location.href = "/inventory/group/list";
  }
  </script>
{% endblock %}
